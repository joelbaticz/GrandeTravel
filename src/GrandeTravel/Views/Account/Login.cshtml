@model LoginViewModel
<h2>Login</h2>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/2.2.0/ui-bootstrap.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/2.2.0/ui-bootstrap-tpls.js"></script>


<form ng-app="myApp" ng-controller="submitCtrl" name="myForm" novalidate="novalidate"
      class="form-horizontal" asp-controller="Account" asp-action="Login" method="post" role="form" asp-route-returnurl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group" ng-class="{ 'has-error' : myForm.username.$touched && myForm.username.$invalid }">
        <label class="control-label col-sm-2" asp-for="Username">Username:</label>
        <div class="col-sm-10">
            <input ng-model="username" name="username" class="form-control" asp-for="Username" required="required" />

            
            @*<span ng-show="myForm.username.$touched && myForm.username.$error.required" class="help-block">Required!</span>
            <span asp-validation-for="Username"></span>
            <p>{{username}}</p>*@
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Password">Password:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="RememberMe">Remember Me:</label>
        <div class="col-sm-10 custom-checkbox">

            @*<input class="checkbox checkbox-primary" type="checkbox" asp-for="RememberMe" checked="checked" />
                <span asp-validation-for="RememberMe"></span>*@

            @*
                <label class="btn btn-secondary">
                    <!-- don't need to specify input="checkbox" because the datatype is bool -->
                    <input class="checkbox checkbox-primary" type="checkbox" asp-for="RememberMe" checked="checked" />
                    <span class="glyphicon glyphicon-ok"></span>
                </label>
            *@

            <div class="checkbox">
                <input id="checkbox1" type="checkbox" asp-for="RememberMe">
                <label for="checkbox1"></label>
            </div>

        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>

<script>
            var app = angular.module("myApp", []);
            app.controller("submitCtrl", function ($scope) {

                $scope.myForm.$setPristine();
                $scope.myForm.$setUntouched();
                $scope.username = "Bill";

            })
</script>