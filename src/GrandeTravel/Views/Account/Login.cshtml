@model LoginViewModel
<h2>Login</h2>

<form class="form-horizontal" asp-controller="Account" asp-action="Login" method="post" role="form" asp-route-returnurl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Username"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Password"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="RememberMe"></label>
        <div class="col-sm-10 custom-checkbox">

            @*<input class="checkbox checkbox-primary" type="checkbox" asp-for="RememberMe" checked="checked" />
            <span asp-validation-for="RememberMe"></span>*@

            @*
            <label class="btn btn-secondary">
                <!-- don't need to specify input="checkbox" because the datatype is bool -->
                <input class="checkbox checkbox-primary" type="checkbox" asp-for="RememberMe" checked="checked" />
                <span class="glyphicon glyphicon-ok"></span>
            </label>
                *@

            <div class="checkbox">
                <input id="checkbox1" type="checkbox" asp-for="RememberMe">
                <label for="checkbox1"></label>
            </div>

        </div>
    </div>
      
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>