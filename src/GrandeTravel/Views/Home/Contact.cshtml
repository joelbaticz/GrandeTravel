@model ContactViewModel
<h2>Contact Grande Travel</h2>



<form asp-controller="Home" asp-action="Contact" method="post" role="form">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="your name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="your email">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject">Subject:</label>
        <input type="text" class="form-control" asp-for="Subject" placeholder="subject">
        <span asp-validation-for="Subject"></span>
    </div>
    <div class="form-group">
        <label asp-for="Message">Message:</label>
        <textarea style="height: 200px;" class="form-control" asp-for="Message" placeholder="your message"></textarea>
        <span asp-validation-for="Message"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>