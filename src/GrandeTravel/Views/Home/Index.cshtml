<div>

    <div class="row">
        <div class="startpagelogo">
            <h2>
                <a asp-controller="Packages" asp-action="Index">Grande Travel</a>
            </h2>
        </div>
        <section class="startpagelinks">
            <div>
                <a asp-controller="Account" asp-action="Login">Sign in</a> |
                <a asp-controller="Account" asp-action="Register">Sign up</a>
            </div>

        </section>
    </div>

    <div class="startpageclear"></div>


    <br />
    <br />

    <div class="fluid">
        <div class="row">
            <h1>Escape to Paradise. Australia awaits!</h1>
            <div class="center-align">

                <form class="form-horizontal" asp-controller="Packages" asp-action="Index" method="get" role="form">

                    <div class="form-group">
                        @*<label class="control-label col-sm-3" for="destination">Destination: </label>*@
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">Destination:</span>
                                <input for="destination" class="form-control" type="text" placeholder="your destination" value="Sydney" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-11">
                            <button type="submit" class="btn btn-link col-sm-12">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


