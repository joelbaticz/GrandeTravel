@model BookPackageViewModel

<h2>Book Package</h2>

<form class="form-horizontal" asp-controller="Packages" asp-action="Book" method="post" role="form">

    <input type="hidden" asp-for="PackageId" value="@Model.PackageId" />

    <input type="hidden" asp-for="ProviderId" value="@Model.ProviderId" />

    <input type="hidden" asp-for="ProviderId" value="@Model.CustomerId" />

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="CompanyName">Company Name:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CompanyName</p>
            <input type="hidden" asp-for="CompanyName" />
            <span asp-validation-for="CompanyName"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="PackageName">Package Name:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.PackageName</p>
            <input type="hidden" asp-for="PackageName" />
            <span asp-validation-for="PackageName"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Price">Price / Person:</label>
        <div class="col-sm-10">
            <p class="form-control-static">$@Model.Price</p>
            <input type="hidden" asp-for="Price" />
            <span asp-validation-for="Price"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="NumberOfPeople">Number of People:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="NumberOfPeople" />
            <span asp-validation-for="NumberOfPeople"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="DateFor">Date For:</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="DateFor" />
            <span asp-validation-for="DateFor"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="SpecialRequirements">Special Requirements:</label>
        <div class="col-sm-10">
            <textarea style="height: 100px; min-height: 100px; min-width: 100%; max-width: 100%;" class="form-control" asp-for="SpecialRequirements"></textarea>
            <span asp-validation-for="SpecialRequirements"></span>
        </div>
    </div>

    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Book Package</button>
        </div>
    </div>

</form>




